                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.AdmissionCourtesy, Model.AdmissionCourtesyList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
                        </div>
                    </div>


                    <div class="card-box">
