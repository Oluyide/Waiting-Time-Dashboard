@model HappinessForm.Models.PatientResponseModel

@{
    ViewBag.Title = "In-Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-8 col-sm-offset-3 text">
        <h1><img src="~/asset2/images/LH_logo.png" />  Patients' Satisfaction Form</h1>
        <div class="description">
        </div>
    </div>
    <div class="col-sm-12">
        <div class="card-box">
            <div class="card-box">
                <label class="col-lg-2 control-label " for="userName1">Switch to Out-Patient Form</label>
                <input type="checkbox" checked data-plugin="switchery" data-color="grey" data-size="small" id="Inp" />
                <h3 style="float:right;color:darkblue" class="col-lg-2 control-label " for="userName1">In Patients' Form</h3>
            </div>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "wizard-vertical" }))
            {
                @*<form id="wizard-vertical">*@
                <h3>Personal Details/Emergency</h3>
                <section>

                    <div class="card-box">
                        <h4 style="color:darkblue">Personal Details</h4>
                        <div class="form-group clearfix">
                            <label class="col-lg-4 control-label " for="userName1">Name *</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(x => x.Name, new { @placeholder = "Full Name", @class = "form-control  input-sm required", @id = "contact-email", required = "" })

                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-lg-4 control-label " for="confirm1">Patient ID *</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(x => x.PatientId, new { @placeholder = "Patient ID", @class = "form-control  input-sm", @id = "", required = "" })
                                @*<input id="confirm1" name="confirm" type="text" class="required form-control">*@
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label class="col-lg-4 control-label " for="confirm1">Room Number *</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(x => x.RoomNumber, new { @placeholder = "Patient ID", @class = "form-control  input-sm", @id = "", required = "" })
                                @*<input id="confirm1" name="confirm" type="text" class="required form-control">*@
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label class="col-lg-4 control-label " for="confirm1">Admitting doctor *</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(x => x.AdmittingDoctor, new { @placeholder = "Patient ID", @class = "form-control  input-sm", @id = "", required = "" })
                                @*<input id="confirm1" name="confirm" type="text" class="required form-control">*@
                            </div>
                        </div>


                        <div class="form-group clearfix">
                            <label class="col-lg-4 control-label " for="confirm1"> Contact Number *</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(x => x.ContactNumber, new { @placeholder = "Contact Number", @class = "form-control  input-sm", @id = "", required = "" })
                                @*<input id="confirm1" name="confirm" type="text" class="required form-control">*@
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-lg-4 control-label " for="password1"> Date *</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(x => x.DateOfVisit, "{0:dd/MM/yyyy}", new { @placeholder = "Date", @class = "required form-control input-sm ", @id = "datepicker", required = "" })
                            </div>
                        </div>
                    </div>
                    <div class="card-box">
                        <h4 style="color:darkblue">Emergency(If Applicable)</h4>
                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="userName1"> Emergency contact number responsiveness *</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.EmergencyContact, Model.EmergencyContactList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="userName1">Immediate attention and assessment on arrival *</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.EmergencyImmediate, Model.EmergencyImmediateList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="userName1">Overall services at emergency *</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.EmergencyOverall, Model.EmergencyOverallList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
