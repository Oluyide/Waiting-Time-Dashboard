                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="userName1">Attentiveness, promptness and quality of care provided *</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.ICUAttentive, Model.ICUAttentiveList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
