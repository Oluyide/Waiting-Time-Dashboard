                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="userName1">Attentiveness, timeliness and quality of care provided *</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.InPatDocAttentiveness, Model.InPatDocAttentivenessList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="userName1">Your involvement in the decisions concerning your treatment *</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.InPatInvolment, Model.InPatInvolmentList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="us  erName1">Explanation of your diagnosis an treatment</label>
                            <div class="col-lg-6">
