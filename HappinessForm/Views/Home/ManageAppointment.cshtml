@model HappinessForm.Models.ManageModel
@{
//Layout = "~/Views/Shared/_Layout3.cshtml";

}
<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/themes/redmond/jquery-ui.css" />
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link href="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
<link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
<script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>


<!-- Plugin files below -->
<link href="~/src/jquery.ptTimeSelect.css" rel="stylesheet" />
<script src="~/src/jquery.ptTimeSelect.js"></script>

<div class="row">
    <div class="col-sm-8 col-sm-offset-2 text" style="background-color:#171381">
        <h1 style="color:white"><img src="~/asset2/images/LH_logo.png" /><span class="col-sm-offset-1">Setup Clinics</span></h1>
        <div class="description">
        </div>
    </div>
    <div class="col-sm-12">
        <div class="card-box">
            @if(TempData["tr"]!=null)
            {
                @TempData["tr"]
            }
            <div class="col-sm-8 col-sm-offset-2">

                @Html.ActionLink("Clinic Dashboard", "Display", "Display")

                <div class="card-box">
                    @using (Html.BeginForm("ManageAppointment", "Home", FormMethod.Post, new { @id = "wizard-vertical" }))
                    {
                        @*<form id="wizard-vertical">*@

                        <section>
                            <div id="sample1" class="ui-widget-content" style="padding: .5em;">
                                <div class="card-box">

                                    <div class="form-group clearfix">
                                        <label class="col-lg-4 control-label " for="userName1">Clinics *</label>
                                        @Html.ListBoxFor(m => m.Specialization, Model.Specializations, new { @class = "col-lg-6", @id = "clinics", @multiple = "multiple" })
                                        @*<select class="col-lg-6" id="clinics" multiple="multiple" required name="clinicList">
                                                @if (Model.Specializations.Count() > 0)
                                                {
                                                    foreach (var item in Model.Specializations)
                                                    {
                                                        if (item.Text != null)
                                                        {
                                                            <option value="@item.Value">
                                                                @item.Text
                                                            </option>
                                                        }
                                                    }
                                                }
                                            </select>*@
                                    </div>
                                    <div class="form-group clearfix">
                                        <label class="col-lg-3 control-label " for="confirm1"> Days*</label>
                                        <div class="col-lg-6">
                                            @Html.DropDownListFor(model => model.Day, Model.Days, new { @class = "form-control   input-sm ", @id = "" })

                                        </div>
                                    </div>
                                    <div class="form-group clearfix">
                                        <label class="col-lg-3 control-label " for="confirm1">Start*</label>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(model => model.StartTime, new { @class = "form-control   input-sm ", @id = "1" })
                                        </div>
                                    </div>
                                    <div class="form-group clearfix">
                                        <label class="col-lg-3 control-label " for="confirm1">End*</label>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(model => model.EndTime, new { @class = " col-lg-6 form-control input-sm ", @id = "2" })
                                        </div>
                                    </div>
                                    <div class="form-group clearfix">
                                        <label class="col-lg-3 control-label " for="confirm1"></label>
                                        <div class="col-lg-6">
                                            <input type="submit" value="Finish" class="btn btn-primary btn-block ipm" data-perm="CustomersCreate" />
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </section>

                    }
                    @*</form>*@
                    <!-- End #wizard-vertical -->
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(function () {
        $('#clinics').multiselect({
            includeSelectAllOption: true
        });

    });

    $(document).ready(function () {
        // find the input fields and apply the time select to them.
        $('#1').ptTimeSelect();
        $('#2').ptTimeSelect();
    });

</script>
