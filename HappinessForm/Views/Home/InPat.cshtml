                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="us  erName1">Courtesy and compassion demonstrated by the doctor</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.InPatDocCourtesy, Model.InPatDocCourtesyList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
                        </div>

                    </div>

                </section>

                <h3>Nursing Experience/Accomodation</h3>
                <section>
                    <div class="card-box">
                        <h4 style="color:darkblue">Nursing Experience</h4>
                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="userName1">Timeliness of response to call bell and your queries *</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.NursingTimeliness, Model.NursingTimelinessList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="userName1">Information shared about medication and/or nursing procedures *</label>
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.NursingInfo, Model.NursingInfoList, new { @placeholder = "Name of staff if you know?", @class = "form-control   input-sm ", @id = "" })
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label class="col-lg-6 control-label " for="us  erName1">Quality of care provided by the nurse to alleviate your pain</label>
                            <div class="col-lg-6">
